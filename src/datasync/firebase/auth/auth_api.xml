<?xml version="1.0" encoding="UTF-8"?>
<!-- See https://firebase.google.com/docs/reference/rest/auth -->
<RestApi name="ApiClient"
		 namespace="QtDataSync::firebase::auth"
		 base="FirebaseApiBase"
		 except="Error">
	<Include local="true">qtdatasync_global.h</Include>
	<Include local="true">firebaseapibase_p.h</Include>
	<Include local="true">auth_error.h</Include>
	<Include local="true">refreshresponse.h</Include>
	<Include local="true">deleterequest.h</Include>
	<Include local="true">signinrequest.h</Include>
	<Include local="true">signinresponse.h</Include>

	<BaseUrl apiVersion="1">https://identitytoolkit.googleapis.com</BaseUrl>
	<Parameter key="key">&lt;firebaseApiKey&gt;</Parameter>

	<Method name="refreshToken"
			verb="POST"
			returns="RefreshResponse">
		<Path>token</Path>
		<Param key="refresh_token" type="QString"/>
		<Param key="grant_type" type="QString" asStr="true">refresh_token</Param>
	</Method>
	<Method name="deleteAccount"
			body="DeleteRequest"
			verb="POST">
		<Path>accounts:delete</Path>
	</Method>

	<Method name="oAuthSignIn"
			verb="POST"
			body="SignInRequest"
			returns="SignInResponse">
		<Path>accounts:signInWithIdp</Path>
	</Method>
</RestApi>
